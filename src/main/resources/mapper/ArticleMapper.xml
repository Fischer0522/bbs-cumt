<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fischer.mapper.ArticleMapper">
    <sql id="selectResult">
        select
               A.id,A.title,A.body,A.description,A.user_id,A.created_at,A.heat,A.type,A.status
        from articles A
            left join favorite f on A.id = f.article_id
            left join users u on A.user_id = u.id
    </sql>
    <select id="getArticles" resultMap="articleResultMap">
        <include refid="selectResult"/>
        <where>
            A.status != 2
            <if test="favoriteBy != null">
                AND f.user_id = #{favoriteBy}
            </if>

            <if test="type!=null">
                AND A.type = #{type}
            </if>

            <if test="author!=null">
                AND A.user_id=#{author}
            </if>
        <!-- status 0普通情况 1置顶 2屏蔽 -->
        <!-- 0按时间排序 1 按热度排序-->
        </where>
        <if test="orderBy!=null">
            order by
            A.status desc,
            <trim suffixOverrides=",">
                <if test="orderBy == 0">
                    A.created_at
                </if>
                <if test="orderBy == 1">
                    A.heat
                </if>
                <!-- 0升序，1降序-->
                <if test="orderType ==1">
                    DESC
                </if>
            </trim>
        </if>

        limit #{page.offset},#{page.limit}

    </select>

    <select id="selectArticleCount" resultType="java.lang.Integer">
        select
        count(*)
        from articles A
        left join favorite f on A.id = f.article_id
        left join users u on A.user_id = u.id

        <where>
            A.status != 2
            <if test="favoriteBy != null">
                AND f.user_id = #{favoriteBy}
            </if>

            <if test="type!=null">
                AND A.type = #{type}
            </if>

            <if test="author!=null">
                AND A.user_id=#{author}
            </if>
            <!-- status 0普通情况 1置顶 2屏蔽 -->
            <!-- 0按时间排序 1 按热度排序-->
        </where>

    </select>
    <resultMap id="articleResultMap" type="com.fischer.pojo.ArticleDO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="body" column="body"/>
        <result property="createdAt" column="created_at"/>
        <result property="status" column="status"/>
        <result property="userId" column="user_id"/>
        <result property="type" column="type"/>
        <result property="heat" column="heat"/>
    </resultMap>


</mapper>